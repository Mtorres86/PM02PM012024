<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:conver="clr-namespace:PM02PM012024.Controllers"
             x:Class="PM02PM012024.Views.PageMostrarDatos"
             Title="PageMostrarDatos">


     <ContentPage.Resources>
        <conver:Base64Image x:Key="BaseArray"/>
    </ContentPage.Resources>

    <VerticalStackLayout>
        <ListView x:Name="listView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Image x:Name="foto"
                                   WidthRequest="70"
                                   HeightRequest="70"
                                   Aspect="AspectFill"
                                   Source="{Binding foto , Converter = {StaticResource BaseArray}}" />
                            <StackLayout>
                                <Label Text="{Binding Nombres}" />
                                <Label Text="{Binding Apellidos, StringFormat='{}{0} - {1:dd/MM/yyyy} - Tel: {2}'}" />
                            </StackLayout>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>

</ContentPage>